<div class="title">
  <p>
    ODCA's Blog
  </p>
  <% if user_signed_in? && current_user.admin? %>
    <%=link_to "New Post", new_blog_path %>
  <% end %>
</div>
<% @blogs.each do |blog| %>
<% @blog = blog %>
  <div class="col-md-8 col-md-offset-2 blog-title">
    <h2><%= blog.title %></h2>
  </div>
  <div class="col-md-8 col-md-offset-2 blogpost">
    <p>
      <%= markdown.render(truncate blog.entry, length: 400).html_safe %>
    </p>
    <%= link_to 'Read More', blog_path(blog) %>
  </div>
<% end %>
<div class="paginate">
  <%= paginate @blogs %>
</div>
