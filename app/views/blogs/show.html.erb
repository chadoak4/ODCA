<div class="title">
  <p>
    <%= @blog.title %>
  </p>
  <% if user_signed_in? && current_user.admin? %>
    <%=link_to "Edit Post", edit_blog_path(@blog) %>
    <%=link_to "Delete Post", blog_path(@blog), method: :delete, data: { confirm: "Are you sure you want to delete?"}%>
  <% end %>
    <%=link_to "Back To Blog", blogs_path %>
</div>

<div class="col-md-8 col-md-offset-2 picture">
  <%= image_tag attachment_url(@blog, :blog_image), :class => "style_image img-responsive" %>
</div>

<div class="col-md-8 col-md-offset-2 post">

  <p>
    <br>
    <%= @blog.created_at.strftime("%B %d, %Y") %>
  </p>
  <p>
    <%= markdown.render(@blog.entry).html_safe %>
  </p>
  <p class='bottom'>
  </p>
</div>
